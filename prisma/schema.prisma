// schema.prisma

datasource db {
  provider = "sqlite" // Assuming you are using SQLite
  url      = "file:./dev.db" // Path to your SQLite database
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id       Int      @id @default(autoincrement())
  name     String
  price    Float
  rating   Int
  imageUrl String
  cartItems CartItem[]
}

model CartItem {
  id        Int      @id @default(autoincrement())
  productId Int
  quantity  Int
  product   Product  @relation(fields: [productId], references: [id])
}
